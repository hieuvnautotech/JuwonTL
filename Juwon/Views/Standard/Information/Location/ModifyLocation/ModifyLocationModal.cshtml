<div class="modal fade" id="modifyModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modify Location</h5>
                <button class="close iBtnSearch" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="box-body bg-white text-right">
                    <div class="row p-0 m-0">

                        <div class="col-md-12 p-2">
                            <div class="row">
                                <div class="col-sm-4  form-group">
                                    <label class="input100">@Html.Raw(Library.Resource.DbTbl_Name)</label>
                                </div>
                                <div class="col-sm-8 form-group">
                                    <input type="text" class="form-control" id="mLocationName" autocomplete="off" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 p-2">
                            <div class="row">
                                <div class="col-sm-4  form-group">
                                    <label class="input100">@Html.Raw(Library.Resource.DbTbl_Category)</label>
                                </div>
                                <div class="col-sm-8 form-group">
                                    <select id="mLocationCategoryId"></select>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 p-2">
                            <div class="row">
                                <div class="col-sm-4  form-group">
                                    <label class="input100">@Html.Raw(Library.Resource.DbTbl_Area)</label>
                                </div>
                                <div class="col-sm-8 form-group">
                                    <select id="mAreaId"></select>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 p-2">
                            <div class="row">
                                <div class="col-sm-4  form-group">
                                    <label class="input100">@Html.Raw(Library.Resource.DbTbl_Description)</label>
                                </div>
                                <div class="col-sm-8 form-group">
                                    <input type="text" class="form-control" id="mLocationDescription" autocomplete="off" />
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-danger Permission_modifyLocation" data-dismiss="modal"><i class="fa fa-close"></i>&nbsp;@Html.Raw(Library.Resource.Btn_Cancel)</button>
                <button class="btn btn-warning Permission_modifyLocation" id="btnModify" data-toggle="modal" data-target="#confirmToModifyModal"><i class="fa fa-edit"></i>&nbsp;@Html.Raw(Library.Resource.Btn_Modify)</button>
            </div>
        </div>
    </div>
</div>
