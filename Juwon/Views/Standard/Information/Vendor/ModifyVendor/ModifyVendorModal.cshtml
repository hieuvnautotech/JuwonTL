<div class="modal fade" id="modifyModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modify Vendor</h5>
                <button class="close iBtnSearch" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body container-fluid">
                <div class="box-body bg-white text-right">
                    <div class="row p-0 m-0">

                        <div class="col-md-12 p-2">
                            <div class="row">
                                <div class="col-sm-4  form-group">
                                    <label class="input100">@Html.Raw(Library.Resource.DbTbl_Code)</label>
                                </div>
                                <div class="col-sm-8 form-group">
                                    <input type="text" class="form-control" id="mVendorCode" readonly autocomplete="off" required />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 p-2">
                            <div class="row">
                                <div class="col-sm-4  form-group">
                                    <label class="input100">@Html.Raw(Library.Resource.DbTbl_Name)</label>
                                </div>
                                <div class="col-sm-8 form-group">
                                    <input type="text" class="form-control" id="mVendorName" autocomplete="off" required />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 p-2">
                            <div class="row">
                                <div class="col-sm-4  form-group">
                                    <label class="input100">@Html.Raw(Library.Resource.DbTbl_Address)</label>
                                </div>
                                <div class="col-sm-8 form-group">
                                    <input type="text" class="form-control" id="mVendorAddress" autocomplete="off" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 p-2">
                            <div class="row">
                                <div class="col-sm-4  form-group">
                                    <label class="input100">@Html.Raw(Library.Resource.DbTbl_Phone)</label>
                                </div>
                                <div class="col-sm-8 form-group">
                                    <input type="text" min="0" class="form-control" id="mVendorPhone" autocomplete="off" />
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 p-2">
                            <div class="row">
                                <div class="col-sm-4  form-group">
                                    <label class="input100">@Html.Raw(Library.Resource.DbTbl_Destination)</label>
                                </div>
                                <div class="col-sm-8 form-group">
                                    @*<input type="text" class="form-control" id="cDestinationName" list="cDestinationList" autocomplete="off" placeholder="Select Destination" required />
                                        <datalist id="cDestinationList"></datalist>*@
                                    <select id="mDestinationId"></select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 p-2">
                            <div class="row">
                                <div class="col-sm-4  form-group">
                                    <label class="input100">@Html.Raw(Library.Resource.DbTbl_Keyword)</label>
                                </div>
                                <div class="col-sm-8 form-group">
                                    <select id="mVendorCategoryId"></select>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12 p-2">
                            <div class="row">
                                <div class="col-sm-4  form-group">
                                    <label class="input100">@Html.Raw(Library.Resource.DbTbl_Buyer)</label>
                                </div>
                                <div class="col-sm-8 form-group">
                                    <select id="mBuyer" multiple></select>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-danger Permission_modifyVendor" data-dismiss="modal"><i class="fa fa-close"></i>&nbsp;@Html.Raw(Library.Resource.Btn_Cancel)</button>
                <button class="btn btn-warning Permission_modifyVendor" data-toggle="modal" data-target="#confirmToModifyModal"><i class="fa fa-plus"></i>&nbsp;@Html.Raw(Library.Resource.Btn_Modify)</button>
            </div>
        </div>
    </div>
</div>
