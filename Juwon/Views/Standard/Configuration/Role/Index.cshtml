    @*<script src="~/Scripts/Standard/Configuration/Role/Role.es5.min.js"></script>
        <script src="~/Scripts/Standard/Configuration/Role/Popup.es5.min.js"></script>*@
    <script src="~/Scripts/Standard/Configuration/Role/Role.js"></script>
    <script src="~/Scripts/Standard/Configuration/Role/Popup.js"></script>
}